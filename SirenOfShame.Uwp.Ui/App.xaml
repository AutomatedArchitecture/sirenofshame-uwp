<Application
    x:Class="SirenOfShame.Uwp.Ui.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SirenOfShame.Uwp.Ui"
    RequestedTheme="Light">

    <Application.Resources>
        <Style x:Key="SosCardBase" TargetType="Panel">
            <Setter Property="Background" Value="White" />
            <Setter Property="Height" Value="200" />
            <Setter Property="Width" Value="300" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style x:Key="SosCard" TargetType="StackPanel" BasedOn="{StaticResource SosCardBase}">
            <Setter Property="Orientation" Value="Vertical" />
        </Style>
        <Style x:Key="SosHalfCard" BasedOn="{StaticResource SosCardBase}" TargetType="Grid">
            <Setter Property="Height" Value="90"></Setter>
        </Style>
        <Style x:Key="SosSubheading" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="40"></Setter>
        </Style>
    </Application.Resources>
</Application>
